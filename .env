# --- Application ---
PORT=3000
MAX_TEXT_LENGTH=5000
LOG_LEVEL=info
NODE_ENV=production

# --- Voice Settings ---
DEFAULT_VOICE=en-GB-Wavenet-B
DEFAULT_SPEAKING_RATE=1.1
DEFAULT_PITCH=-2.2
SSML_BREAK_MS=360

# --- SSML Rules ---
SSML_ENABLED=true
SSML_DATE_FORMAT=dmy
SSML_TIME_FORMAT=hms12
SSML_CURRENCIES=true
SSML_TECH_TERMS=true

# --- Cloud Services (Optional - leave empty for basic functionality) ---
R2_ACCESS_KEY=
R2_SECRET_KEY=
R2_ENDPOINT=
R2_BUCKET=
R2_PUBLIC_BASE_URL=

GOOGLE_CREDENTIALS=
GCP_PROJECT_ID=
GCP_LOCATION=

# --- CORS ---
ALLOWED_ORIGINS=*

