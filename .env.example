# --- Cloudflare R2 ---
R2_ACCESS_KEY=your_access_key
R2_SECRET_KEY=your_secret_key
R2_ENDPOINT=https://<accountid>.r2.cloudflarestorage.com
R2_BUCKET=your-bucket-name
R2_PUBLIC_BASE_URL=https://pub-xxxxxx.r2.dev

# --- Google Cloud ---
GOOGLE_CREDENTIALS={"type":"service_account",...}  # Full JSON content
GCP_PROJECT_ID=your-project-id
GCP_LOCATION=your-region

# --- SSML Configuration ---
SSML_BREAK_MS=300       # Pause duration in milliseconds
SSML_DATE_FORMAT=ymd    # ymd/mdy/dmy
SSML_TIME_FORMAT=hms12  # hms12/hms24
# SSML RULES CONFIG
SSML_DATES=true
SSML_TIMES=true
SSML_CURRENCIES=true
SSML_MEASUREMENTS=true
SSML_ACRONYMS=true
SSML_NUMBERS=true
# --- Application ---
PORT=3000
MAX_TEXT_LENGTH=5000    # Character limit
