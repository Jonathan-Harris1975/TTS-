# --- Cloudflare R2 ---
R2_ACCESS_KEY=
R2_SECRET_KEY=
R2_ENDPOINT=https://<accountid>.r2.cloudflarestorage.com
R2_BUCKET=
R2_PUBLIC_BASE_URL=

# --- Google Cloud ---
GOOGLE_CREDENTIALS={"type":"service_account"...}
GCP_PROJECT_ID=
GCP_LOCATION=

# --- SSML Configuration ---
SSML_ENABLED=true
SSML_BREAK_MS=300
SSML_DATE_FORMAT=ymd
SSML_TIME_FORMAT=hms12
SSML_CURRENCIES=true
SSML_MEASUREMENTS=true
SSML_ACRONYMS=true

# --- Application ---
PORT=3000
MAX_TEXT_LENGTH=5000
LOG_LEVEL=info
